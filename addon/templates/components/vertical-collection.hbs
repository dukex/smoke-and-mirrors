{{#each __content key="@identity" as |item index|}}
  {{#vertical-item
    defaultHeight=defaultHeight
    tagName=itemTagName
    content=item
    index=index
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    keyForId=keyForId
    collection=this
    as |wrapper|
  }}
    {{#if shouldRenderList}}
      {{#if wrapper.contentInserted}}
        {{yield item}}
      {{/if}}
    {{/if}}
  {{/vertical-item}}
{{/each}}